<h1> Add Restaurant</h1>

<%= simple_form_for model: @restaurant, class: "restaurant-form" do |f|%>
  <%= f.input :name %>

  <%= f.input :address %>

  <%= f.input :phone_number %>

  <%= f.input :category, collection: Restaurant::['chinese', 'italian', 'japanese', 'french', 'belgian'] %>

  <%= f.submit %>
<% end %>

<%= link_to restaurant_path %>
